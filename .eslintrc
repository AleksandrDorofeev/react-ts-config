{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "max-len": [
      "error",
      120
    ],
    "quotes": [
      "error",
      "double",
      {
          "avoidEscape": true
      }
    ],
    "indent": [
      "error",
      2
    ],
    "no-use-before-define": ["error", { "variables": false }],
    "no-unused-vars": 0,
    "@typescript-eslint/no-unused-vars": 2,
    "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
    "react/no-unused-styles": 2,
    "react/split-platform-components": 2,
    "react/no-inline-styles": 0,
    "react/no-color-literals": 2,
    "react/no-raw-text": 0
  }
}
